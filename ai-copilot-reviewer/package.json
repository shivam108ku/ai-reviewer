{
  "name": "ai-copilot-reviewer",
  "displayName": "AI Copilot Code Reviewer",
  "description": "Full AI assistant with chat and auto-fix",
  "version": "1.0.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Linters"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-copilot-panel",
          "title": "AI Copilot",
          "icon": "$(sparkle)"
        }
      ]
    },
    "views": {
      "ai-copilot-panel": [
        {
          "type": "webview",
          "id": "aiCopilotChat",
          "name": "AI Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "aiCopilotReviewer.openChat",
        "title": "üí¨ Open Chat",
        "category": "AI Copilot"
      },
      {
        "command": "aiCopilotReviewer.reviewFile",
        "title": "üîç Review File",
        "category": "AI Copilot"
      },
      {
        "command": "aiCopilotReviewer.fixAllIssues",
        "title": "‚ú® Fix All",
        "category": "AI Copilot"
      },
      {
        "command": "aiCopilotReviewer.reviewSelection",
        "title": "üîç Review Selection",
        "category": "AI Copilot"
      },
      {
        "command": "aiCopilotReviewer.explainCode",
        "title": "üìñ Explain",
        "category": "AI Copilot"
      },
      {
        "command": "aiCopilotReviewer.fixCode",
        "title": "‚ú® Fix",
        "category": "AI Copilot"
      },
      {
        "command": "aiCopilotReviewer.generateTests",
        "title": "üß™ Generate Tests",
        "category": "AI Copilot"
      },
      {
        "command": "aiCopilotReviewer.refactorCode",
        "title": "‚ôªÔ∏è Refactor",
        "category": "AI Copilot"
      },
      {
        "command": "aiCopilotReviewer.clearDiagnostics",
        "title": "üóëÔ∏è Clear",
        "category": "AI Copilot"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "aiCopilot.submenu",
          "group": "1_modification"
        }
      ],
      "aiCopilot.submenu": [
        {
          "command": "aiCopilotReviewer.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "aiCopilotReviewer.fixCode",
          "when": "editorHasSelection"
        },
        {
          "command": "aiCopilotReviewer.refactorCode",
          "when": "editorHasSelection"
        },
        {
          "command": "aiCopilotReviewer.generateTests",
          "when": "editorHasSelection"
        }
      ]
    },
    "submenus": [
      {
        "id": "aiCopilot.submenu",
        "label": "ü§ñ AI Copilot"
      }
    ],
    "keybindings": [
      {
        "command": "aiCopilotReviewer.reviewFile",
        "key": "ctrl+shift+r"
      },
      {
        "command": "aiCopilotReviewer.fixAllIssues",
        "key": "ctrl+shift+f"
      },
      {
        "command": "aiCopilotReviewer.openChat",
        "key": "ctrl+shift+i"
      }
    ],
    "configuration": {
      "title": "AI Copilot",
      "properties": {
        "aiCopilotReviewer.apiKey": {
          "type": "string",
          "default": "",
          "description": "DeepSeek API Key"
        },
        "aiCopilotReviewer.reviewOnSave": {
          "type": "boolean",
          "default": false
        },
        "aiCopilotReviewer.model": {
          "type": "string",
          "default": "deepseek-chat",
          "enum": ["deepseek-chat", "deepseek-coder"]
        }
      }
    }
  }
}
