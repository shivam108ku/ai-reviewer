{
  "name": "ai-copilot-reviewer",
  "displayName": "AI Copilot Reviewer",
  "description": "AI-powered code reviewer and assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "title": "AI Copilot Reviewer",
      "properties": {
        "aiCopilotReviewer.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API Key for AI code review",
          "markdownDescription": "Get your API key from [Google AI Studio](https://aistudio.google.com/app/apikey)"
        },
        "aiCopilotReviewer.reviewOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically review code when file is saved"
        }
      }
    },
    "commands": [
      {
        "command": "aiCopilotReviewer.openChat",
        "title": "AI Copilot: Open Chat",
        "icon": "$(sparkle)"
      },
      {
        "command": "aiCopilotReviewer.reviewFile",
        "title": "AI Copilot: Review Current File"
      },
      {
        "command": "aiCopilotReviewer.reviewSelection",
        "title": "AI Copilot: Review Selected Code"
      },
      {
        "command": "aiCopilotReviewer.quickReviewSelection",
        "title": "AI Copilot: Quick Review Selection"
      },
      {
        "command": "aiCopilotReviewer.explainCode",
        "title": "AI Copilot: Explain Code"
      },
      {
        "command": "aiCopilotReviewer.fixCode",
        "title": "AI Copilot: Fix Code"
      },
      {
        "command": "aiCopilotReviewer.generateTests",
        "title": "AI Copilot: Generate Tests"
      },
      {
        "command": "aiCopilotReviewer.refactorCode",
        "title": "AI Copilot: Refactor Code"
      },
      {
        "command": "aiCopilotReviewer.clearDiagnostics",
        "title": "AI Copilot: Clear Diagnostics"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-copilot-panel",
          "title": "AI Copilot",
          "icon": "$(sparkle)"
        }
      ]
    },
    "views": {
      "ai-copilot-panel": [
        {
          "type": "webview",
          "id": "aiCopilotChat",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "aiCopilotReviewer.reviewSelection",
          "when": "editorHasSelection",
          "group": "aiCopilot@1"
        },
        {
          "command": "aiCopilotReviewer.explainCode",
          "when": "editorHasSelection",
          "group": "aiCopilot@2"
        },
        {
          "command": "aiCopilotReviewer.fixCode",
          "when": "editorHasSelection",
          "group": "aiCopilot@3"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "eslint": "^8.41.0",
    "glob": "^8.1.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
