{
  "name": "ai-copilot-reviewer",
  "displayName": "AI Copilot Reviewer",
  "description": "AI-powered code review assistant using Google Gemini API",
  "version": "0.0.1",
  "publisher": "shivam108ku",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "code-review",
    "gemini",
    "copilot",
    "assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-copilot-panel",
          "title": "AI Copilot",
          "icon": "$(sparkle)"
        }
      ]
    },
    "views": {
      "ai-copilot-panel": [
        {
          "type": "webview",
          "id": "aiCopilotChat",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "aiCopilotReviewer.openChat",
        "title": "AI Copilot: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aiCopilotReviewer.reviewFile",
        "title": "AI Copilot: Review File"
      },
      {
        "command": "aiCopilotReviewer.reviewSelection",
        "title": "AI Copilot: Review Selection"
      },
      {
        "command": "aiCopilotReviewer.explainCode",
        "title": "AI Copilot: Explain Code"
      },
      {
        "command": "aiCopilotReviewer.fixCode",
        "title": "AI Copilot: Fix Code"
      },
      {
        "command": "aiCopilotReviewer.generateTests",
        "title": "AI Copilot: Generate Tests"
      },
      {
        "command": "aiCopilotReviewer.refactorCode",
        "title": "AI Copilot: Refactor Code"
      },
      {
        "command": "aiCopilotReviewer.clearDiagnostics",
        "title": "AI Copilot: Clear Reviews"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "aiCopilotReviewer.reviewSelection",
          "when": "editorHasSelection",
          "group": "aiCopilot@1"
        },
        {
          "command": "aiCopilotReviewer.explainCode",
          "when": "editorHasSelection",
          "group": "aiCopilot@2"
        },
        {
          "command": "aiCopilotReviewer.fixCode",
          "when": "editorHasSelection",
          "group": "aiCopilot@3"
        }
      ]
    },
    "configuration": {
      "title": "AI Copilot Reviewer",
      "properties": {
        "aiCopilotReviewer.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API Key"
        },
        "aiCopilotReviewer.reviewOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically review code on save"
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.x",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.x"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shivam108ku/ai-reviewer.git"
  },
  "bugs": {
    "url": "https://github.com/shivam108ku/ai-reviewer/issues"
  },
  "license": "MIT"
}
